


<h1 align="center">Listing all Posts</h1>

<% @posts.each do |post| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class = "post-name">
          <%= link_to post.Name, post_path(post) %>
        </div>
        <div class="post-body">
        <%= post.Veh_Year%> <%=post.Make%>, <%=post.Model %>
        </div>
        <div class="post_actions">
          <%= link_to "Print (PDF)", post_path(post, format: "pdf"), class: "btn btn-xs btn-primary" %> |
          <%= link_to "Edit this Post", edit_post_path(post), class: "btn btn-xs btn-primary" %> |
          <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: "Are you Sure?"}, class: "btn btn-xs btn-primary" %>
        </div>
        <div class="created at">
          <%= post.created_at%>
        </div>
      </div>
    </div>
  </div>
  <% end %>