<%= render 'shared/errors', obj: @post %>
<div class='row'>
  <div class='col-xs-12'>
<%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    
    <div class='row', align="center">
        <div class="col-xs-6 form-group", align="center">
            <%= f.label(:Name) %>
            <%= f.text_field :Name, class: "form-control", placeholder: "Enter Name Here", autofocus: true %> 
        </div>
        <div class="col-xs-6 form-group", align="center">
                 <%= f.label(:Phone) %>
                <%= f.text_field :Phone, class: "form-control", placeholder: "Enter Phone Number Here", autofocus: true %>
        </div>

         <div class="col-xs-12 form-group", align="center">
                 <%= f.label(:Adress, "Address") %>
                <%= f.text_field :Adress, class: "form-control", placeholder: "Enter Address Here", autofocus: true %>
        </div>

        <div class="col-xs-3 form-group", align="center">
                 <%= f.label(:Veh_Year, "Veh/Year") %>
                <%= f.text_field :Veh_Year, class: "form-control", placeholder: "Enter Vehicle Year", autofocus: true %>
        </div>
        <div class="col-xs-5 form-group", align="center">
                 <%= f.label(:Make) %>
                <%= f.text_field :Make, class: "form-control", placeholder: "Enter Make Here", autofocus: true %>

        </div>
        <div class="col-xs-4 form-group", align="center">
                 <%= f.label(:Model) %>
                <%= f.text_field :Model, class: "form-control", placeholder: "Enter Model Here", autofocus: true %>
        </div>

        <div class="col-xs-9 form-group", align="center">
                 <%= f.label(:LicPlate,"License Plate") %>
                <%= f.text_field :LicPlate, class: "form-control", placeholder: "Enter License Plate Here", autofocus: true %>
        </div>

        <div class="col-xs-3 form-group", align="center">
                 <%= f.label(:Miles) %>
                <%= f.text_field :Miles, class: "form-control", placeholder: "Enter Miles Here", autofocus: true %>
        </div>

        <div class="col-xs-12 form-group", align="center">
                 <%= f.label(:VIN, "V.I.N.") %>
                <%= f.text_field :VIN, class: "form-control", placeholder: "Enter VIN Here", autofocus: true %>
        </div>

      </div>  
        <div>
        <h3 align="center"> Payment Method</h3>
                <div class="col-sm-3", align="center">
                    <%= f.check_box :Visa %>
                    <%= f.label :Visa%>
                </div>
                <div class="col-sm-3", align="center">
                    <%= f.check_box :Discover %>
                    <%= f.label :Discover%>
                </div>
                <div class="col-sm-3", align="center">
                    <%= f.check_box :MasterCard %>
                    <%= f.label :MasterCard, "MasterCard"%>
                </div>
                <div class="col-sm-3", align="center">
                    <%= f.check_box :Cash %>
                    <%= f.label :Cash%>
                </div>
            </div>


            <div>
            <h3 align="center">_________________________________________________</h3>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Pair %>
                    <%= f.label(:Pair,"PAIR")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Air %>
                    <%= f.label(:Air,"AIR")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Acl%>
                    <%= f.label(:Acl,"ACL")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Tc_cac%>
                    <%= f.label(:Tc_cac,"TC/CAC")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Efe %>
                    <%= f.label(:Efe,"EFE")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Egr%>
                    <%= f.label(:Egr,"EGR")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Can%>
                    <%= f.label(:Can,"CAN")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Cat%>
                    <%= f.label(:Cat,"CAT")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Mil%>
                    <%= f.label(:Mil,"MIL")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :O2s%>
                    <%= f.label(:O2s,"O2S")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Pcv%>
                    <%= f.label(:Pcv,"PCV")%> 
                </div>

                <div class="col-sm-2", align="center">
                    <%= f.check_box :Timing%>
                    <%= f.label :Timing%>
                </div>
            </div>
    
        <h3 align="center">_________________________________________________</h3>

        <h3 align="center">Fees:</h3>

        <div class='row im-centered'>
           <div class="col-xs-15 form-group", align="center">
                <%= f.label(:CASmog, "California Smog Inspection") %>
                <%= f.text_field :CASmog, class: "form-control", placeholder: "California Smog Inspection", autofocus: true %>
            </div>
        </div>
           
        <div class='row im-centered', align="left">
           <div class="col-xs-15 form-group", align="center">
                <%= f.label(:CAInsp, "California Smog Insp./ Heavy Duty Vehicles") %>
                <%= f.text_field :CAInsp, class: "form-control", placeholder: "California Smog Insp./ Heavy Duty Vehicles", autofocus: true %>
            </div>
        </div>
        <div class='row im-centered', align="left">
            <div class="col-xs-15 form-group", align="center">
                <%= f.label(:VIN2, "VIN") %>
                <%= f.text_field :VIN2, class: "form-control", placeholder: "VIN", autofocus: true %>
            </div>
        </div>

        <div class='row im-centered', align="left"> 
           <div class="col-xs-15 form-group", align="center">
                <%= f.label(:CASmogCert, "California Smog Certificate") %>
                <%= f.text_field :CASmogCert, class: "form-control", placeholder: "California Smog Certificate", autofocus: true %>
            </div>
        </div>

        <div class='row im-centered', align="left">
          <div class="col-xs-15 form-group", align="center">
                <%= f.label(:PreInsp, "Pre-Inspection") %>
                <%= f.text_field :PreInsp, class: "form-control", placeholder: "Pre-Inspection", autofocus: true %>
            </div>
        </div>

        <div class='row im-centered', align="left">   
