                <%= f.text_field :Evap, class: "form-control", placeholder: "Evap. Test", autofocus: true %>
            </div>
        </div>
            

        <div class='row im-centered', align="left">   
           <div class="col-xs-15 form-group", align="center">
                 <%= f.label(:Est, "Estimates") %>
                <%= f.text_field :Est, class: "form-control", placeholder: "Estimates", autofocus: true %>
            </div>
        </div>

         <div class='row im-centered', align="left">   
           <div class="col-xs-15 form-group", align="center">
                 <%= f.label(:GasCap, "Gas Cap(s)") %>
                <%= f.text_field :GasCap, class: "form-control", placeholder: "GasCap", autofocus: true %>
            </div>
        </div>

         <div class='row im-centered', align="left">   
           <div class="col-xs-15 form-group", align="center">
                 <%= f.label(:Mis, "Miscellaneous") %>
                <%= f.text_field :Mis, class: "form-control", placeholder: "Miscellaneous", autofocus: true %>
            </div>
        </div>

         <div class='row im-centered'>   
           <div class="col-xs-15 form-group", align="center">
                 <%= f.label(:Tax, " '%' tax") %>
                <%= f.text_field :Tax, class: "form-control", placeholder: "Tax", autofocus: true %>
            </div>
        </div>



 

            
         <div class='row im-centered', align="center">
          <div class="form-group ">
            <div class="col-sm-20">
                <%= f.submit class: 'btn btn-primary btn-lg' %>
            </div>
            
        </div>
        </div>
        <% end %>
    
</div>


</div>
